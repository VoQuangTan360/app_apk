<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".onboardingstart"
    android:background="@color/white">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/OBview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:background="@drawable/view_pager_background"
        />
    <LinearLayout
        android:id="@+id/indicacatorsContainer"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/indicator_inactive_background"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/imageNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom|center"
        android:layout_marginBottom="1dp"
        android:text="Next"
        android:paddingHorizontal="60dp"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/backbtn"
        />
    <TextView
        android:id="@+id/textskip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/skip"
        android:textColor="#4C6ED7"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"/>


</LinearLayout>